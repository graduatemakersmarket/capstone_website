<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<%- include("../partials/header") %>
</head>
<body>

	<!-- Include navigation-->
	<%- include("../partials/navigation") %>

	<!-- Include featured-->
	<%- include("../partials/featured") %>

 	<!-- BEGIN PAGE CONTENT-->
	 <div class="content-container content-wrap">
		<div class="container px-4 py-2" id="makers" data-aos="fade-right">
			<h2 class="pb-1 border-bottom">MAKERS</h2>

			<% if (locals.makers.length > 0) { %>
			<div class="row row-cols-1 row-cols-md-3 g-4">
				<% locals.makers.forEach(maker => { %>
					<div class="col">
						<div class="card h-100" style="max-width: 400px;">
							<img src="/avatar_images/<%= maker.avatar %>" class="card-img-top" alt="user-avatar" style="height: auto; width: auto;">
							<div class="card-body">
								<h5 class="card-title"><%= maker.first_name.charAt(0).toUpperCase() + maker.first_name.slice(1); %>&nbsp;<%= maker.last_name.charAt(0).toUpperCase() + maker.last_name.slice(1); %></h5>
								<% if (maker.biography != null) { %>
									<p class="card-text"><% if (maker.biography.length > 140) {%> <%= clean(maker.biography.slice(0, 140)) + "..." %> <% } else { %> <%= clean(maker.biography) %> <% } %></p>
								<% } else { %>
									<p class="card-text"><%= maker.first_name.charAt(0).toUpperCase() + maker.first_name.slice(1); %> has not created a biography</p>

								<% } %>
							</div>
							<div class="card-footer">
								<small class="text-body-secondary"><a class="btn btn-dark btn-sm" href="/makers/<%= maker.id %>" role="button" style="width: 100%;">VIEW <%= maker.first_name.toUpperCase() %>'S PROFILE</a></small>
							</div>
						</div>
					</div>
				<% }) %>
			</div>
			<% } else { %>
				<p>There are no verified makers in the database to display</p>
			<% } %>
			<br>
			<!-- BEGIN PAGINATION-->
			<% if (locals.total > 1) { %>
				<nav>
				<ul class="pagination justify-content-center" data-bs-theme="dark">
					<% if (locals.offset === 0) { %>
					<li class="page-item disabled">
						<a class="page-link">Previous</a>
					</li>
					<% } else { %>
					<a class="page-link" href="/makers/page/<%= locals.page - 1 %>" tabindex="-1"> 
					Previous
					</a>
					<%  } %>
					<% var i = (Number(locals.page) > 5 ? Number(locals.page) - 4 : 1) %>
					<% for(; i <= (Number(locals.page) + 4) && i <= locals.total; i++) { %>
					<% if (locals.page === i) { %>
						<li class="page-item active">
						<a class="page-link" href="#"><%=i%> <span class="sr-only">
							(current)
						</span></a>
					</li>
					<% } else { %>
						<li class="page-item">
						<a class="page-link" href="/makers/page/<%=i%>">
							<%=i%>
						</a>
						</li>
					<% } %>
					<% } %>
					<li class="page-item">
					<% if ((locals.page + 1) > locals.total) { %>
						<li class="page-item disabled">
						<a class="page-link">Next</a>
						</li>
					<% } else { %>
						<a class="page-link" href="/makers/page/<%= locals.page + 1 %>">
						Next
						</a>
					<% } %>
					</li>
				</ul>
				</nav>
	  		<%}%>
			<!-- END PAGINATION-->
		</div>
  	</div>
	<!-- END PAGE CONTENT-->

	<!-- Include footer-->
	<%- include("../partials/footer") %>

</body>
</html>